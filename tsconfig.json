{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/models/*": ["src/models/*"],
      "@/interfaces/*": ["src/interfaces/*"],
      "@/utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
